<!DOCTYPE html>
<html>
  <head>
    <title>StudioApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="<%= root_path %>">StudioApp</a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false" aria-label="ナビゲーションの切替">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="Navber">
          <ul class="navbar-nav mr-auto">
            
          </ul>
          <ul class="navbar-nav">
            <%= form_tag(studios_path, method: 'get', class: "form-inline my-2 my-lg-0") do %>
              <%= select_tag :search_area, options_from_collection_for_select(Area.all, :id, :name), {class: "form-control mr-sm-2", placeholder: "検索..."} %>
              <%= submit_tag "エリア検索", class: "btn btn-outline-success my-2 my-sm-0" %>
            <% end %>
            <% if logged_in? %>
              <li class="nav-item active">
                <%= link_to "スタジオを投稿する", new_studio_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ユーザートップ", user_path(current_user), class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", logout_path, method: :delete, class: "nav-link" %>
              </li>
            <% else %>
              <li class="nav-item active">
                <%= link_to "新規登録", new_user_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", login_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div>
    </nav>
    <%= render 'shared/flash' %>
    <%= yield %>  
  </body>
</html>