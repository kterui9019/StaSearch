<div class="container user_show_container">
  <div class="row">
    <aside class="col-md-4">
      <%= image_tag @user.image.thumb150.url class: "icon-image" %>
      <h3><%= @user.name %></h3>
      <%= link_to "プロフィール編集", edit_user_path(@user) %> | <%= link_to "退会する", user_path, method: :delete %>
    </aside>
    
    <div class="col-md-8">
      <h3>お気に入り</h3>
      <div class="text-right"><%= link_to "スタジオを投稿する", new_studio_path %></div>
      <div class="row">
  <% @favorite_studios.each do |studio| %>
  <div class="col-sm-12 col-md-6">
    <div class="card img-thumbnail">
      <% if studio.image? %>
        <%= image_tag studio.image.url, class:"card-img-top" %>
      <% else %>
        <%= image_tag "default-studio-icon.jpeg", class:"card-img-top" %>
      <% end %>
      <div class="card-body px-2 py-3">
        <h5 class="card-title"><%= link_to studio.name, studio_path(studio) %></h5>
        <p class="card-text">コンテンツ コンテンツ コンテンツ</p>
        <small><i class="fas fa-map-marker-alt"></i><cite title="<%= studio.address %>"><%= studio.address %> </small>
        <i class="fas fa-phone"></i> <%= studio.telno %>
        <br />
        <i class="fas fa-globe-europe"></i> <a href="<%= studio.url %>"><%= studio.url %></a>
        <br />
        <% if favorited?(current_user.id, studio.id) %>
          <%= link_to(favorite_path(studio.favorite_id(current_user.id)), method: :delete) do %>
            <button type="button" class="btn btn-secondary">
              お気に入りから削除
            </button>
          <% end %>
        <% else %>
          <%= form_for(@favorite) do |f| %>
            <%= hidden_field_tag :studio_id, studio.id %>
            <%= f.submit "お気に入りへ追加", class:"btn btn-primary" %>
          <% end %>
        <% end %>

      </div><!-- /.card-body -->
    </div><!-- /.card -->
  </div><!-- /.col-sm-6.col-md-3 -->
<% end %>
</div><!-- /.row -->
    </div>
  </div>
</div>




