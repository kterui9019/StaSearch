<div class="container user_show_container">
  <div class="row">
    <aside class="col-md-4">
      <%= image_tag @user.image.thumb150.url class: "icon-image" %>
      <h3><%= @user.name %></h3>
      <%= link_to "プロフィール編集", edit_user_path(@user) %> | <%= link_to "退会する", user_path, method: :delete %>
    </aside>
    
    <div class="col-md-8">
      <h3>お気に入り</h3>
      <div class="text-right"><%= link_to "スタジオを投稿する", new_studio_path %></div>
      <% @favorite_studios.each do |studio| %>
      <div class="col-xs-12 col-sm-12 col-md-12 studio-content">
          <div class="well well-sm">
            <h4><%= link_to studio.name, studio_path(studio) %></h4>
              <div class="row studio-name">
                  <div class="col-sm-6 col-md-4">
                    <% if studio.image? %>
                      <%= image_tag studio.image.url, class:"img-rounded img-responsive" %>
                    <% else %>
                      <%= image_tag "default-studio-icon.jpeg", class:"img-rounded img-responsive" %>
                    <% end %>
                  </div>
                  <div class="col-sm-6 col-md-6 studio-body">
                      <p>パラグラフ</p>
                      <small><cite title="San Francisco, USA"><%= studio.address %> <i class="glyphicon glyphicon-map-marker">
                      </i></cite></small>
                      <p>
                          <i class="glyphicon glyphicon-envelope"></i>email@example.com <!-- ここ電話番号にしたい -->
                          <br />
                          <i class="glyphicon glyphicon-globe"></i><a href="http://www.jquery2dotnet.com">www.jquery2dotnet.com</a> <!-- ここlink_toにする -->
                          <br />
                      <!-- Split button -->
                      <div class="btn-group">
                          <button type="button" class="btn btn-primary">
                            Social
                          </button>
                      </div>
                  </div>
              </div>
          </div>
      </div>
    <% end %>
    </div>
  </div>
</div>