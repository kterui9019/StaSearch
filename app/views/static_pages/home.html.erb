<div class="jumbotron-fluid">
  <div class="bkRGBA">
    <div class="container">
      <h1>さあ、スタジオを探そう</h1>
      <p>スタサーチはエリアや特徴からスタジオを探すことができます。</p>
      <%= form_tag(studios_path, method: 'get') do %>
        <div class="form row justify-content-center">
          <div class="col-2">
          </div>
          <div class="col-6">
            <%= text_field_tag :search_name, '', class: "form-control mb-2", placeholder: "スタジオ名" %>
          </div>
          <div class="col-2">
            <%= submit_tag "検索", class:"btn btn-primary mb-2" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container area_container">
  <h2>エリアから探す</h2>
  <div class="row">
    <div class="col-sm-6 col-md-3">
      <%= link_to studios_path(search_area: 1), class: "card area-card h-100" do %>
        <%= image_tag "shinjuku.jpg", class: "card-img-top" %>
        <div class="card-body">
          <h3>新宿</h3>
          <p>新宿駅、代々木駅、などなど…</p>
        </div>
      <% end %>
    </div>
    <div class="col-sm-6 col-md-3">
      <%= link_to studios_path(search_area: 2), class: "card area-card h-100" do %>
