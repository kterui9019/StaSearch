
<%= search_form_for(@q, html: { class: 'form-holizontal' }, url:search_path) do |f| %>
        <div class="row">
          <div class="form-inline col-sm-10 ">
          <%= f.search_field :name_cont, class:"form-control", placeholder:"スタジオ名" %>
          <%= f.collection_select :area_id_eq, @areas, :id, :name, {include_blank: '指定なし', prompt: true}, class: "form-control" %>
          <%= f.submit "検索", class:"btn btn-primary" %>
          </div>
        </div>
        <div class="form-check">
          <label>
            <%= f.collection_check_boxes :hash_tags_id_in, @hash_tags, :id, :tag, class: "white" %>
          </label>
        </div>
      <% end %>