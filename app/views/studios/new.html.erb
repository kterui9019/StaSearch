<% content_for(:html_title) { 'スタジオ登録' } %>
<div class="container new_studio_container">
  <h1>新規スタジオ登録</h1>
  <%= render "error_messages" %>
  <%= form_for(@studio) do |f| %>
    <div class="form-group">
      <%= f.label :スタジオ名 %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :住所 %>
      <%= f.text_field :address, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :電話番号 %>
      <%= f.text_field :telno, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :URL %>
      <%= f.text_field :url, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :スタジオの画像 %></br>
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
      <%= f.label :ハッシュタグ %></br>
      <div class="form-check form-check-inline">
        <%= f.collection_check_boxes :hash_tags, HashTag.all, :id, :tag %>
      </div>
    </div>
    <%= f.submit "送信", class: "btn btn-primary" %>
  <% end %>
</div>